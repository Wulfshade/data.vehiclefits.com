<?php if ($this->pageCount): ?>
    <div class="paginationControl">
        <!-- Previous page link -->
        <?php if (isset($this->previous)): ?>
            <a class="btn" href="<?php echo $this->url(array('page' => $this->previous)); ?>">
                &lt; Previous
            </a> |
        <?php else: ?>
            <a class="btn disabled">&lt; Previous</a> |
        <?php endif; ?>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page): ?>
            <?php if ($page != $this->current): ?>
                <a href="<?php echo $this->url(array('page' => $page)); ?>">
                    <?php echo $page; ?>
                </a> |
            <?php else: ?>
                <?php echo $page; ?> |
            <?php endif; ?>
        <?php endforeach; ?>

        <!-- Next page link -->
        <?php if (isset($this->next)): ?>
            <a class="btn" href="<?php echo $this->url(array('page' => $this->next)); ?>">
                Next &gt;
            </a>
        <?php else: ?>
            <a class="btn disabled">Next &gt;</a>
        <?php endif; ?>
    </div>
<?php endif; ?>